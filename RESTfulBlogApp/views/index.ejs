
<% include ./partials/header %>

<div class="ui main text container">
	<div class="ui huge header">RESTful Blog App</div>
	<div class="ui top attached ">
		<div class="ui divided items segment">
			<% blogs.forEach(function(blog) {  %>
			    <div class="item">
			    	<div class="image">
			    		<img src="<%=  blog.image  %>">			    		
			    	</div>
			    	<div class="content">
			    		<a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
			    		<div class="meta">
			    			<span><%= blog.created.toString().substring(0,21) %></span>
			    			
			    		</div>
			    		<div class="description">
			    			<p><%- blog.body.substring(0,99) %> ...</p>
			    			
			    		</div>
			    		<div class="extra">
			    			<a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
			    			Read More
			    			<i class="right chevron icon"></i>
			    			</a>
			    		</div>		    		
			    	</div>
			    </div>

			<% }); %>
			
		</div>
		
		
	</div>
	
	
</div>


 

<% include ./partials/footer %>
